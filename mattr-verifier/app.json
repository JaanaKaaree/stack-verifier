{
  "expo": {
    "name": "mattr-verifier",
    "slug": "mattr-verifier",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to scan QR codes for credential verification.",
        "NFCReaderUsageDescription": "This app needs NFC access to read NFC tags for location verification.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSExceptionDomains": {
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": false
            }
          }
        }
      },
      "entitlements": {
        "com.apple.developer.nfc.readersession.formats": [
          "NDEF"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "INTERNET",
        "NFC"
      ],
      "usesCleartextTraffic": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-barcode-scanner",
      [
        "expo-camera",
        {
          "cameraPermission": "This app needs camera access to scan QR codes for credential verification."
        }
      ],
      [
        "react-native-nfc-manager",
        {
          "nfcPermission": "This app needs NFC access to read NFC tags for location verification.",
          "selectIdentifiers": [
            "A0000002471001"
          ],
          "systemCodes": [
            "8008"
          ]
        }
      ]
    ]
  }
}
