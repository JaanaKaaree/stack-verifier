{
  "expo": {
    "name": "STACK Verifier",
    "slug": "stack-verifier",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stackdigital.mattrverifier",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to scan QR codes for credential verification.",
        "NFCReaderUsageDescription": "This app needs NFC access to read NFC tags for location verification.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSExceptionDomains": {
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": false
            }
          }
        }
      },
      "entitlements": {
        "com.apple.developer.nfc.readersession.formats": [
          "NDEF"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.NFC",
        "android.permission.RECORD_AUDIO"
      ],
      "usesCleartextTraffic": true,
      "package": "com.anonymous.mattrverifier"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "updates": {
      "url": "https://u.expo.dev/fc0ee6ed-93ef-45de-901e-a6a36f82ec29"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "This app needs camera access to scan QR codes for credential verification."
        }
      ],
      [
        "react-native-nfc-manager",
        {
          "nfcPermission": "This app needs NFC access to read NFC tags for location verification."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "fc0ee6ed-93ef-45de-901e-a6a36f82ec29"
      }
    }
  }
}
